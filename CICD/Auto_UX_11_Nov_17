                               clear
echo -e $BIYellow"######################################################################" $NORMAL
echo -e $BIGreen"Usercreation Scripts for Unix Servers (Linux/Solaris/HP-UX) Servers###" $NORMAL
echo -e $BIYellow"######################################################################" $NORMAL

                                cd /home/sverma/ansible/nwr/usercreation
                                cat usercr.yml | sed "s/abcz/$target/g" > usercr_try.yml
                                ./scr1
