                                clear
echo -e $BIYellow"######################################################################" $NORMAL
echo -e $BIGreen"User Removal for Unix  Servers (Linux/Solaris/HP-UX) Servers##########" $NORMAL
echo -e $BIYellow"######################################################################" $NORMAL
